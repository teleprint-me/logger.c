{
  "editor.defaultFormatter": null,
  "editor.stickyTabStops": true,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.fontSize": 12,
  "editor.lightbulb.enabled": "off",
  "editor.fontFamily": "'Noto Sans Mono', 'Source Code Pro', 'Droid Sans Mono'",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/bin",
    "${workspaceFolder}/.venv/lib/python3.11/site-packages"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.languageServer": "Jedi",
  "python.analysis.typeCheckingMode": "strict",
  "black-formatter.args": ["--line-length=79"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  // C/C++ specific settings
  "clang-format.executable": "/usr/bin/clang-format",
  // Enable clang-format on save for C/C++ code
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "[makefile]": {
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.insertSpaces": false,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.trimAutoWhitespace": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true
  },
  "files.associations": {
    "*.tcss": "jinja-css",
    "*.h": "c",
    "sdl.h": "c",
    "math.h": "c",
    "stdio.h": "c",
    "sdl_events.h": "c",
    "stdbool.h": "c",
    "sdl_render.h": "c",
    "vector.h": "c",
    "stddef.h": "c",
    "*.tcc": "c"
  }
}
